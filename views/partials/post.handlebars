<div class="post">
  <div class="post-content">
    <span class="post-title">{{title}}</span>
    <img class="post-image" src="{{imageURL}}" alt="imageURL">
    <span class="post-summary">{{summary}}</span>
    <div class="post-tags">
      
      <span class="post-tag">{{tags.[0]}}</span>
      <span class="post-tag">{{tags.[1]}}</span>
      <span class="post-tag">{{tags.[2]}}</span>

      <span class="array-index">{{num}}</span>
    </div>
  </div>
</div>
