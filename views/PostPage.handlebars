<main class= "contents">
  <h2 id="post-page-title">{{title}}</h2>
  <div class= "view-post">

    <div class="view-input-container">
      <img src="{{imageURL}}" alt="This is the campaign logo">
    </div>


    <div class="view-post-container" id="view-summary-container">
      <label for="view-summary-post">Summary:</label>
      <span class="post-summary">{{summary}}</span>
    </div>

    <div class="view-post-container" id="view-description-container">
      <label for="view-description-post">Description:</label>
      <span class="post-description">{{description}}</span>
    </div>


    <div class="view-post-container" id="view-comments-container">
      <label id="comments-label" for="view-comment-post">Comments:</label>
      {{#each comments}}
        {{> comment}}
      {{/each}}
    </div>

    <div class="add-comment-container">
     <input type="text" id="new-comment-text" placeholder="New Comment..">
     <button type="button" id="add-comment-button">Submit</button>
    </div>

  </div>
</main>
